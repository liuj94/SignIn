<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.example.signin.view.NoScrollViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/mMainBottomRg"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/mMainBottomRg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_52dp"
        android:background="@color/white"
        android:checkedButton="@id/mMainHomeRb"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mViewPager">

        <RadioButton

            android:id="@+id/mMainHomeRb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/bg_main_home"
            android:gravity="center"
            android:paddingTop="@dimen/padding_6dp"
            android:text="首页"
            android:textColor="@drawable/color_main_bottom_bar_text"
            android:textSize="@dimen/font_size_10" />
        <!--      MaterialBadgeTextView      android:drawableTop="@drawable/bg_main_msg"-->


        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/mMainMsgRb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:drawableTop="@mipmap/tabbar_normal_messages"
                android:gravity="center"
                android:paddingTop="@dimen/padding_6dp"
                android:text="消息"
                android:textColor="@color/gray_4"
                android:textSize="@dimen/font_size_10" />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/mMainMsgNum"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:gravity="bottom"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/ovel_ff0000_bg"
                    />
            </RelativeLayout>


        </RelativeLayout>

        <RadioButton
            android:id="@+id/mMainHouseRb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/bg_main_house"
            android:gravity="center"
            android:paddingTop="@dimen/padding_6dp"
            android:text="房源"
            android:textColor="@drawable/color_main_bottom_bar_text"
            android:textSize="@dimen/font_size_10"
            android:visibility="gone" />




        <RadioButton

            android:id="@+id/mMainMineRb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/bg_main_mine"
            android:gravity="center"
            android:paddingTop="@dimen/padding_6dp"
            android:text="我"
            android:textColor="@drawable/color_main_bottom_bar_text"
            android:textSize="@dimen/font_size_10" />

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_f5f5f5"
        app:layout_constraintBottom_toTopOf="@+id/mMainBottomRg"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout><!--</layout>-->