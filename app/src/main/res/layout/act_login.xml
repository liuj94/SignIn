<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F8">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@mipmap/denglubg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<RelativeLayout
    android:paddingTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <ImageView
        android:paddingRight="13dp"
        android:paddingLeft="13dp"
        android:id="@+id/goback"

        android:layout_width="wrap_content"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/title"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="19sp"
        android:text="码上签到助手"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
        <TextView
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 您好！"
            android:textColor="#ffffffff"
            android:textSize="27sp"
            />
        <TextView
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="欢迎来到签到系统"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            />
        <LinearLayout
            android:paddingLeft="29dp"
            android:paddingRight="29dp"
            android:paddingBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_12"
            android:layout_margin="13dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center_vertical"
                android:text="账号登录"
                android:textColor="#ff333333"
                android:textSize="16sp"
                android:maxLines="1"
                />
            <EditText
                android:id="@+id/userName"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="请输入账号"
                android:padding="11dp"
                android:background="@drawable/shape_bg_f3f4f8_10"
                android:textColor="#ff333333"
                android:textColorHint="#ff999999"
                android:textSize="16sp"
                android:maxLines="1"
                />
            <EditText
                android:id="@+id/password"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:padding="11dp"
                android:background="@drawable/shape_bg_f3f4f8_10"
                android:textColor="#ff333333"
                android:textColorHint="#ff999999"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/login"
                android:gravity="center"
                android:background="@drawable/shape_bg_ff3974f6_10"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="登 录"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical"
            android:paddingBottom="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="码上会议"
                android:textColor="#ff999999"
                android:textSize="10sp"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="码上互动技术支持"
                android:textColor="#ff999999"
                android:textSize="10sp"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>