<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F8">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@mipmap/denglubg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingTop="30dp">

            <ImageView
                android:id="@+id/goback"
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                android:paddingLeft="13dp"
                android:paddingRight="13dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="码上签到助手"
                android:textColor="#fff"
                android:textSize="19sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text=" 您好！"
            android:textColor="#ffffffff"
            android:textSize="27sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="欢迎来到签到系统"
            android:textColor="#ffffffff"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13dp"
            android:background="@drawable/shape_bg_12"
            android:orientation="vertical"
            android:paddingLeft="29dp"
            android:paddingRight="29dp"
            android:paddingBottom="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="账号登录"
                android:textColor="#ff333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_bg_f3f4f8_10"
                android:drawableLeft="@mipmap/zh"
                android:drawablePadding="5dp"
                android:hint="请输入账号"
                android:maxLines="1"
                android:padding="11dp"
                android:singleLine="true"
                android:textColor="#ff333333"
                android:textColorHint="#ff999999"
                android:textSize="16sp"
                android:text=""/>
<!--                android:text="15310333123"/>-->
<!--                android:text="15310333567"/>-->

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_bg_f3f4f8_10"
                android:drawableLeft="@mipmap/mm"
                android:drawablePadding="5dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:padding="11dp"
                android:singleLine="true"
                android:textColor="#ff333333"
                android:textColorHint="#ff999999"
                android:textSize="16sp"
                android:text=""/>

            <TextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/shape_bg_ff3974f6_10"
                android:gravity="center"
                android:text="登 录"
                android:textColor="#ffffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="码上会议"
                android:textColor="#ff999999"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="码上互动技术支持"
                android:textColor="#ff999999"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>