<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3974F6">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@mipmap/top_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout

            android:paddingTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <ImageView
                android:paddingRight="13dp"
               android:paddingLeft="13dp"
                android:id="@+id/goback"
                android:src="@drawable/md_nav_back"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/title"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="16sp"
                android:text="会场签到"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
<!--        <androidx.core.widget.NestedScrollView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:fillViewport="true">-->


        <LinearLayout
            android:background="@drawable/shape_bg_12"
           android:layout_margin="13dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="签到点名称"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textColor="#ff3974f6"
                android:textSize="14sp"
                />
            <ImageView
                android:id="@+id/stateIv"
                android:layout_margin="20dp"
                android:layout_width="128dp"
                android:layout_height="128dp"/>
            <TextView
                android:id="@+id/stateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重复签到"
                android:textColor="#ffffc300"
                android:textSize="48sp"
                />
            <LinearLayout
                android:id="@+id/infoLl"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userName"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="陈淼淼"
                    android:textColor="#ff030303"
                    android:textSize="32sp"
                    />
                <TextView
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/companyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司名称公司名称"
                    android:textColor="#ff030303"
                    android:textSize="18sp"
                    />
                <TextView
                    android:paddingBottom="30dp"
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参会人类别"
                    android:textColor="#ff030303"
                    android:textSize="18sp"
                    />
            </LinearLayout>

        </LinearLayout>
        <EditText
            android:id="@+id/numEt"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:background="@drawable/shape_bg_12"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="输入房号"
            android:textColor="#ff3974f6"
            android:textColorHint="#ff7d8592"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/submit"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:background="@drawable/shape_bg_12"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="返回（3）"
            android:textColor="#ff3974f6"
            android:textSize="16sp"
            />
<!--        </androidx.core.widget.NestedScrollView>-->
    </LinearLayout>

</RelativeLayout>