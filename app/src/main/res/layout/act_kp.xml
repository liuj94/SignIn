<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3974F6"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@mipmap/top_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/goback"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingLeft="13dp"
                android:paddingTop="13dp"
                android:paddingRight="13dp"
                android:paddingBottom="13dp"
                android:src="@mipmap/fh" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="订单发票"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="@drawable/shape_bg_12"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/topbg"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="签到点名称"
                        android:textColor="#ff3974f6"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/fpxxxq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/infoLl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/userName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"

                                android:text=""
                                android:textColor="#ff333333"
                                android:textSize="27sp" />

                            <TextView
                                android:id="@+id/companyName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:paddingBottom="10dp"
                                android:text=""
                                android:textColor="#ff333333"
                                android:textSize="16sp" />


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/stateIv"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:src="@mipmap/qrcodeopy" />

                        <TextView
                            android:id="@+id/invoiceType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text=""
                            android:textColor="#ff666666"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text=""
                            android:textColor="#ff666666"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/zwsj"
                        android:visibility="invisible"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="190dp"
                            android:layout_height="160dp"
                            android:layout_margin="20dp"
                            android:src="@mipmap/jg_hs" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:maxLines="1"
                            android:text="未填写发票信息"
                            android:textColor="#D43030"
                            android:textSize="40sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="9dp"
                        android:text="查看申请订单"
                        android:textColor="#ff3974f6"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fpxx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="13dp"
                    android:background="@drawable/shape_bg_12"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="14dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="13dp"
                            android:layout_marginRight="6dp"
                            android:background="#3974F6" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发票信息"
                            android:textColor="#ff4d4d4d"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="23dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="发票代码"
                                    android:textColor="#ff4d4d4d"
                                    android:textSize="14sp" />

                                <EditText
                                    android:id="@+id/invoiceNumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_marginLeft="20dp"
                                    android:background="#fff"
                                    android:hint="请输入发票代码"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="#ff4d4d4d"
                                    android:textSize="14sp"
                                    android:windowSoftInputMode="adjustPan" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="发票号码"
                                    android:textColor="#ff4d4d4d"
                                    android:textSize="14sp" />

                                <EditText
                                    android:id="@+id/invoiceNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_marginLeft="20dp"
                                    android:background="#fff"
                                    android:hint="请输入发票号码"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="#ff4d4d4d"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/sm"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="18dp"
                            android:src="@mipmap/erweima" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="13dp"
                    android:background="@drawable/shape_bg_12"
                    android:gravity="center"
                    android:text="确认开票完成"
                    android:textColor="#ff3974f6"
                    android:textSize="16sp" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/submitfh"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="13dp"
                    android:background="@drawable/shape_bg_12"
                    android:gravity="center"
                    android:text="返回"
                    android:textColor="#666666"
                    android:textSize="16sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <!--        </androidx.core.widget.NestedScrollView>-->
    </LinearLayout>

</RelativeLayout>