<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/root">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="5dp"
        android:text="来程信息"
        android:textColor="#ff333333"
        android:textSize="15sp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/kong"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="8dp"
        android:orientation="vertical"
        android:background="@drawable/shape_bg_12"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView

            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尚未添加来程信息"
            android:padding="15dp"
            android:textColor="#ff333333"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="8dp"
        android:orientation="vertical"
        android:background="@drawable/shape_bg_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/laichengxingxi"/>
            <TextView
                android:id="@+id/name"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="#ff333333"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/edit"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改"
                android:textColor="#ff2196F3"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="left"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lc_data1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ff7d8592"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/lc_didian1"
                    android:textStyle="bold"
                    android:maxLength="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ff030303"
                    android:textSize="19sp"
                    />
                <TextView
                    android:id="@+id/lc_jichang1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ff7d8592"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/time"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text=""
                android:textColor="#ff030303"
                android:textSize="12sp"
                />
            <LinearLayout

                android:gravity="right"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lc_data2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ff7d8592"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/lc_didian2"
                    android:textStyle="bold"
                    android:maxLength="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ff030303"
                    android:textSize="19sp"
                    />
                <TextView
                    android:id="@+id/lc_jichang2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ff7d8592"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <TextView
                android:layout_marginTop="1dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/lc_btn"
                android:background="@drawable/shape_bg_ff3974f6_15"
                android:layout_width="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:minWidth="50dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="接到"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                />
        </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F3F4F8"/>
        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/jiedaill"
            android:gravity="center_vertical"
            android:paddingRight="16dp"
            android:paddingLeft="18dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/jiedai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ff333333"
                android:textSize="12sp"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/call1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/bohao"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>